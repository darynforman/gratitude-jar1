{{define "title"}}My Gratitude Notes{{end}}

{{define "note-card"}}
<div id="note-{{.ID}}" class="glass rounded-xl overflow-hidden shadow-card hover:shadow-card-hover transition-all duration-300">
    <div class="p-6">
        <div class="flex items-start justify-between mb-4">
            <div class="flex items-center space-x-3">
                <span class="text-3xl">{{.Emoji}}</span>
                <div>
                    <h3 class="text-lg font-semibold text-gray-900">{{.Title}}</h3>
                    <span class="text-sm text-gray-500">{{.Category}}</span>
                </div>
            </div>
            <div class="flex space-x-2">
                <button hx-get="/gratitude/edit/{{.ID}}"
                        hx-target="#note-{{.ID}}"
                        hx-swap="outerHTML"
                        class="p-2 text-gray-500 hover:text-primary-600 hover:bg-primary-50 rounded-lg transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                </button>
                <button hx-delete="/gratitude/delete/{{.ID}}"
                        hx-target="#note-{{.ID}}"
                        hx-swap="outerHTML"
                        hx-confirm="Are you sure you want to delete this note?"
                        class="p-2 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                </button>
            </div>
        </div>
        <p class="text-gray-600 mb-4">{{.Content}}</p>
        <div class="flex items-center justify-between text-sm text-gray-500">
            <span>{{.CreatedAt}}</span>
        </div>
    </div>
</div>
{{end}}

{{define "content"}}
<div class="min-h-screen bg-gradient-to-br from-blue-600 to-blue-500 py-12">
    <!-- Background Decorative Elements -->
    <div class="absolute top-0 left-0 right-0 bottom-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-blue-400 rounded-full opacity-10 transform translate-x-1/2 -translate-y-1/2"></div>
        <div class="absolute bottom-0 left-0 w-[800px] h-[800px] bg-blue-400 rounded-full opacity-10 transform -translate-x-1/2 translate-y-1/2"></div>
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="flex justify-between items-center mb-12">
            <h1 class="text-4xl font-bold text-white">My Gratitude Notes</h1>
            <a href="/gratitude" 
               class="inline-flex items-center px-6 py-3 bg-white text-blue-600 rounded-xl font-medium hover:bg-white/90 transition-all duration-300 shadow-lg">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                New Note
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{range .Notes}}
            <div class="note-card glass rounded-2xl p-6 backdrop-blur-sm bg-white/10" data-note-id="{{.ID}}">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex items-center space-x-3">
                        <span class="text-3xl">{{.Emoji}}</span>
                        <div>
                            <h3 class="text-xl font-semibold text-white">{{.Title}}</h3>
                            <span class="text-sm text-white/70">{{.Category}}</span>
                        </div>
                    </div>
                    <div class="flex space-x-2">
                        <button hx-get="/gratitude/edit/{{.ID}}"
                                hx-target="#note-{{.ID}}"
                                hx-swap="outerHTML"
                                class="p-2 text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </button>
                        <button hx-delete="/gratitude/delete/{{.ID}}"
                                hx-target="#note-{{.ID}}"
                                hx-swap="outerHTML"
                                hx-confirm="Are you sure you want to delete this note?"
                                class="p-2 text-white/70 hover:text-white hover:bg-white/10 rounded-lg transition-all duration-200">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </button>
                    </div>
                </div>
                <p class="text-white/90 mb-4">{{.Content}}</p>
                <div class="text-sm text-white/70">{{.CreatedAt}}</div>
            </div>
            {{end}}
        </div>
    </div>
</div>

<style>
@keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(0, -10px) rotate(1deg); }
}

.note-card {
    animation: float 6s ease-in-out infinite;
    animation-delay: calc(var(--animation-order) * 0.1s);
}

.note-card:nth-child(3n+1) {
    --animation-order: 1;
}

.note-card:nth-child(3n+2) {
    --animation-order: 2;
}

.note-card:nth-child(3n) {
    --animation-order: 3;
}

.glass {
    backdrop-filter: blur(12px);
}

@keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.note-card {
    animation: fade-in 0.6s ease-out forwards, float 6s ease-in-out infinite;
    opacity: 0;
}

.note-card:nth-child(n) {
    animation-delay: calc(var(--animation-order) * 0.1s), calc(var(--animation-order) * 0.1s + 0.6s);
}
</style>
{{end}} 