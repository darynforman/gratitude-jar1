{{define "note-card"}}
<div id="note-{{.ID}}" class="note-card bg-white rounded-xl p-6 shadow-sm border border-gray-200" data-note-id="{{.ID}}">
    <div class="flex justify-between items-start mb-4">
        <div class="flex items-center space-x-3">
            <span class="text-3xl">{{.Emoji}}</span>
            <div>
                <h3 class="text-xl font-semibold text-gray-900">{{.Title}}</h3>
                <span class="text-sm text-gray-500">{{.Category}}</span>
            </div>
        </div>
        <div class="flex space-x-2">
            <button hx-get="/gratitude/edit/{{.ID}}"
                    hx-target="#edit-form-container"
                    hx-swap="innerHTML"
                    onclick="document.getElementById('edit-form-container').classList.remove('hidden')"
                    class="p-2 text-gray-500 hover:text-blue-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </button>
            <button hx-delete="/gratitude/delete/{{.ID}}"
                    hx-target="#note-{{.ID}}"
                    hx-swap="outerHTML"
                    hx-confirm="Are you sure you want to delete this note?"
                    class="p-2 text-gray-500 hover:text-red-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </div>
    <p class="text-gray-600 mb-4">{{.Content}}</p>
    <div class="text-sm text-gray-500">{{.CreatedAt}}</div>
</div>
{{end}}
